package ex29;

/*Escreva um aplicativo que utiliza instruções de repetição e switch para imprimir a canção 
 * “The Twelve Days of Christmas”. Uma instrução switch deve ser utilizada para imprimir o dia 
 * (“primeiro”, “segundo” etc.). Uma instrução switch separada deve ser utilizada para imprimir 
 * o restante de cada verso.
 */

public class TheTwelveDaysOfChristmas {

	public static void main(String[] args) {
		
		for(int i = 1; i <= 12; i++) {
			switch (i) 
			{
				case 1:
					System.out.println("On the first day of Christmas");
					break;
				case 2:
					System.out.println("On the second day of Christmas");
					break;
				case 3:
					System.out.println("On the third day of Christmas");
					break;
				case 4:
					System.out.println("On the fourth day of Christmas");
					break;
				case 5:
					System.out.println("On the fifth day of Christmas");
					break;
				case 6:
					System.out.println("On the sixth day of Christmas");
					break;
				case 7:
					System.out.println("On the seventh day of Christmas");
					break;
				case 8:
					System.out.println("On the eighth day of Christmas");
					break;
				case 9:
					System.out.println("On the ninth day of Christmas");
					break;
				case 10:
					System.out.println("On the tenth day of Christmas");
					break;
				case 11:
					System.out.println("On the eleventh day of Christmas");
					break;
				case 12:
					System.out.println("On the twelfth day of Christmas");
					break;
			}
			for(int j = 1; j <= i; j++) {
				switch (i)
				{
					case 1:
						System.out.println("12 drummers drumming\r\n");
						break;
					case 2:
						System.out.println("Two turtle doves\r\nAnd a ");
						break;
					case 3:
						System.out.println("Three French hens\r\n");
						break;
					case 4:
						System.out.println("Four calling birds\r\n");
						break;
					case 5:
						System.out.println("Five gold rings, badam-pam-pam\r\n");
						break;
					case 6:
						System.out.println("Six geese a laying\r\n");
						break;
					case 7:
						System.out.println("Seven swans a swimming\r\n");
						break;
					case 8:
						System.out.println("Eight maids a milking\r\n");
						break;
					case 9:
						System.out.println("Nine ladies dancing\r\n");
						break;
					case 10:
						System.out.println("Ten lords a leaping\r\n");
						break;
					case 11:
						System.out.println("Eleven pipers piping\r\n");
						break;
					case 12:
						System.out.println("partridge in a pear tree\r\n");
						break;	
				}
			}
		}
	}
}
